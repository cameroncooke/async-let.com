---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <div class="flex flex-col gap-6 md:flex-row md:items-start">
        <figure class="about-avatar mt-1 w-40 shrink-0 sm:w-56 md:w-64 lg:w-72">
          <img
            src="/images/about/avatar.png"
            alt="Retro neon avatar illustration of Cameron"
            class="m-0 block w-full rounded"
          />
        </figure>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <h1
              class="my-4 inline-block text-2xl font-bold sm:my-4 sm:text-2xl"
            >
              Hi, I'm @camsoft2000
            </h1>
            <a
              target="_blank"
              href="/rss.xml"
              class="inline-block"
              aria-label="rss feed"
              title="RSS Feed"
            >
              <IconRss
                width={20}
                height={20}
                class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
              />
              <span class="sr-only">RSS Feed</span>
            </a>
          </div>

          <p>
            Building at the speed of thought with iOS, Swift, and the AI
            revolution. Creator of XcodeBuildMCP and vibe coding enthusiast,
            sharing honest insights on leveraging AI to ship faster while
            keeping your balance. Real tactics from someone riding the
            exponential curve with optimism intact.
          </p>

          {
            // only display if at least one social link is enabled
            SOCIALS.length > 0 && (
              <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
                <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">
                  Social Links:
                </div>
                <Socials />
              </div>
            )
          }
        </div>
      </div>
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul class="post-list featured-list">
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul class="post-list recent-list">
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
