---
import Hr from "./Hr.astro";
import Socials from "./Socials.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <Socials centered />

    <nav aria-label="Footer links" class="my-2">
      <ul
        class="footer-links flex flex-wrap items-center justify-center sm:justify-start"
      >
        <li>
          <a
            class="footer-link"
            href="https://creativecommons.org/licenses/by/4.0/">CC 4.0</a
          >
        </li>
        <li>
          <a
            class="footer-link"
            href="https://github.com/cameroncooke/async-let.com/LICENSE"
            >Code MIT</a
          >
        </li>
        <li>
          <a class="footer-link" href="https://github.com/satnaing/astro-paper"
            >AstroPaper Theme</a
          >
        </li>
      </ul>
    </nav>
  </div>
</footer>
